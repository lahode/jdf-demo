  "display" : {
    "group1" : {
      "wrapper": {
        "type" : "div",
        "class" : "group-1"
      },
      "label": "Group 1",
      "fields" : ["name", "food", "colorpicker", "checkit"]
    },
    "group2" : {
      "wrapper": {
        "type" : "fieldset",
        "class" : "group-2"
      },
      "label": "Group 2",
      "fields" : ["button", "radios", "multiplechoices", "datemeal"]
    },
    "group3" : {
      "class" : "form-inline",
      "fields" : ["cancel", "submit"]
    }
  }

