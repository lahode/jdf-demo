        "placeholder": "Select an option",
        "validation": {
          "required": true
        }
      },
      {
        "type": "checkbox",
        "label": "Do you like it",
        "value": true,
        "name": "checkit"
      },
      {
        "type": "button",
        "label": "Button here",
        "name": "button"
      },
      {
        "type": "radios",
        "label": "Button here",
        "name": "radios",
