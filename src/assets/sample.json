        "options": [
          { "pizza": "Pizza" },
          "Hot Dogs",
          { "hknakworstje" : "HKnakworstje" },
          { "coffee" : "HCoffee" }
        ]
      },
      {
        "type": "checkboxes",
        "label": "Button here",
        "name": "multiplechoices",
        "options": [
          { "pizza": "Pizza" },
          { "hknakworstje" : "HKnakworstje" },
          { "coffee" : "HCoffee" }
        ]
      },
      {
