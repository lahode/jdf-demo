      {
        "type": "date",
        "label": "Date of your last meal",
        "placeholder": "Select a date",
        "name": "datemeal",
        "format" : "YYYY-MM-DD"
      },
      {
        "type": "submit",
        "label": "Submit",
        "name": "submit"
      },
      {
        "type": "reset",
        "label": "Cancel",
        "name": "cancel"
      }
